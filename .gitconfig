[user]
    name = Yehor Lvivski
    email = lvivski@gmail.com

[alias]
    cb = checkout -B
    co = checkout
    ci = commit
    st = status -sbu
    br = branch
    lg = log --pretty=oneline -n 20 --graph
    cs = commit -s
    sb = show-branch
    df = diff
    up = pull
    dw = diff --color-words
    ll = log --stat --abbrev-commit
    unpush = push -f origin HEAD^:master
    tags = tag -l
    branches = branch -a
    remotes = remote -v

[color]
    ui = auto
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[core]
    excludesfile = ~/.gitignore
    editor = vim
    whitespace = space-before-tab,indent-with-non-tab,trailing-space
[merge]
    log = true

[apply]
    whitespace = fix

[help]
    autocorrect = 1
