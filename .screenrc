defscrollback 1024
altscreen on
defbce on
vbell off
#escape ^Zz
escape ``
autodetach on
defutf8 on
bindkey -k F1 prev
bindkey -k F2 next
startup_message off
hardstatus alwayslastline
caption splitonly
#hardstatus alwayslastline '%{= wk}%-Lw%{= kW}[%50>%n%f* %t]%{= wk}%+Lw%< %{= wk}%-=%d/%m %c %H%{-}'
hardstatus string '%{= wk} %-w%{= KW} %n %t %{-}%+w  %-= %= %H %{=b}%c '
#hardstatus string "%{+b wk} %-w%{+b wk} %n %t %{-}%+w %41=%H @ %l %-= %= %D,%c:%s "
#hardstatus string '%{= kG}[ %{G}%H %{g}][%= %{= kw}%?%-Lw%?%{r}(%{W}%n*%f%t%?(%u)%?%{r})%{w}%?%+Lw%?%?%= %{g}][%{B} %d/%m %{W}%c %{g}]'
caption string '%{= KW} %-='
shell -$SHELL
shelltitle '$ |bash'
bind r eval "source $HOME/.screenrc"
#termcapinfo xterm-256color|xterm-color|xterm|xterms|xs|rxvt ti@:te@
