defscrollback 1024
altscreen on
defbce on
vbell off
#escape ^Zz
autodetach on
defutf8 on
bindkey -k F1 prev
bindkey -k F2 next
startup_message off
hardstatus alwayslastline
caption splitonly
hardstatus string ' %{= wk}%-w%{= bw} %n %t %{-}%+w %=%H %{=b}%c '
caption string '%{= KW} %-='
shell -$SHELL
shelltitle '$ |bash'
bind r eval "source $HOME/.screenrc"
#termcapinfo xterm-256color|xterm-color|xterm|xterms|xs|rxvt ti@:te@
